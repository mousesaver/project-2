    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Tracker</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/Movie_Logo.png" alt="Logo" width="100">
            </a>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <% if (user) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/users/profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users/logout">Logout</a>
                </li>
              <% } else { %>
                <li class="nav-item">
                    <a class="nav-link" href="/users/new">Sign Up</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users/login">Login</a>
                </li>
                <% } %>
            </ul>
            <form class="d-flex" method="GET" action="/movies">
              <input class="form-control me-2" type="search" placeholder="movie title" aria-label="Search" name="s" required/>
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
    </nav>
    

